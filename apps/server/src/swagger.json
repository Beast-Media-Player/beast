  "components": {
    "schemas": {
      "PlayerSettings": {
        "type": "object",
        "properties": {
          "mediaId": {
            "type": "string"
          },
          "seek": {
            "type": "number"
          },
          "streams": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PlayerSettingStream"
            }
          },
          "resolution": {
            "$ref": "#/components/schemas/PlayerResolution"
          }
        },
        "nullable": false,
        "required": [
          "mediaId",
          "seek",
          "streams"
        ]
      },
      "PlayerSettingStream": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "audio",
              "subtitle",
              "video"
            ]
          },
          "index": {
            "type": "number"
          }
        },
        "nullable": false,
        "required": [
          "type",
          "index"
        ]
      },
      "PlayerResolution": {
        "type": "object",
        "properties": {
          "width": {
            "type": "number"
          },
          "height": {
            "type": "number"
          },
          "bitrate": {
            "type": "number"
          }
        },
        "nullable": false,
        "required": [
          "width",
          "height"
        ]
      },
      "StartedPlayerInfos": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "settings": {
            "$ref": "#/components/schemas/PlayerSettings"
          },
          "availableResolutions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PlayerResolution"
            }
          }
        },
        "nullable": false,
        "required": [
          "id",
          "settings",
          "availableResolutions"
        ]
      },
      "QueryPlayer": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          }
        },
        "nullable": false,
        "required": [
          "id"
        ]
      },
      "QueryMedia": {
        "type": "object",
        "properties": {
          "mediaId": {
            "type": "string"
          }
        },
        "nullable": false,
        "required": [
          "mediaId"
        ]
      },
      "Media": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "width": {
            "type": "number"
          },
          "height": {
            "type": "number"
          },
          "bitrate": {
            "type": "number"
          },
          "duration": {
            "type": "number"
          }
        },
        "nullable": false,
        "required": [
          "id",
          "path",
          "width",
          "height",
          "bitrate",
          "duration"
        ]
      },
      "MediaWithStreams": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "width": {
            "type": "number"
          },
          "height": {
            "type": "number"
          },
          "bitrate": {
            "type": "number"
          },
          "duration": {
            "type": "number"
          },
          "streams": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/MediaStream"
            }
          }
        },
        "nullable": false,
        "required": [
          "id",
          "path",
          "width",
          "height",
          "bitrate",
          "duration",
          "streams"
        ]
      },
      "MediaStream": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "streamIndex": {
            "type": "number"
          },
          "type": {
            "type": "string",
            "enum": [
              "audio",
              "subtitle",
              "video",
              "attachment"
            ]
          }
        },
        "nullable": false,
        "required": [
          "name",
          "streamIndex",
          "type"
        ]
      },
      "Library": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "MOVIES",
              "TV_SHOWS"
            ]
          },
          "name": {
            "type": "string"
          },
          "path": {
            "type": "string"
          }
        },
        "nullable": false,
        "required": [
          "id",
          "type",
          "name",
          "path"
        ]
      },
      "CreateLibrary": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "MOVIES",
              "TV_SHOWS"
            ]
          },
          "name": {
            "type": "string"
          },
          "path": {
            "type": "string"
          }
        },
        "nullable": false,
        "required": [
          "type",
          "name",
          "path"
        ]
      },
      "QueryLibrary": {
        "type": "object",
        "properties": {
          "libraryId": {
            "type": "string"
          }
        },
        "nullable": false,
        "required": [
          "libraryId"
        ]
      },
      "EditLibraryPermissions": {
        "type": "object",
        "properties": {
          "libraryId": {
            "type": "string"
          },
          "add": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "userId": {
                  "type": "string"
                },
                "access": {
                  "type": "string",
                  "enum": [
                    "READ",
                    "WRITE"
                  ]
                }
              },
              "nullable": false,
              "required": [
                "userId",
                "access"
              ]
            }
          },
          "remove": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "userId": {
                  "type": "string"
                },
                "access": {
                  "type": "string",
                  "enum": [
                    "READ",
                    "WRITE"
                  ]
                }
              },
              "nullable": false,
              "required": [
                "userId",
                "access"
              ]
            }
          }
        },
        "nullable": false,
        "required": [
          "libraryId"
        ]
      },
      "LibraryContent": {
        "oneOf": [
          {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/LibraryContentShow"
            }
          },
          {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/LibraryContentMovie"
            }
          }
        ]
      },
      "LibraryContentShow": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "TV_SHOWS"
            ]
          },
          "data": {
            "$ref": "#/components/schemas/Show"
          }
        },
        "nullable": false,
        "required": [
          "type",
          "data"
        ]
      },
      "Show": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "tvmazeId": {
            "type": "number"
          },
          "name": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "overview": {
            "type": "string",
            "nullable": true
          },
          "images": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "libraryId": {
            "type": "string"
          }
        },
