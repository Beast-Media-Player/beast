{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "name": "@beast/server-db-schemas",
  "version": "1.0.0",
  "private": false,
  "main": "dist/index.js",
  "exports": "./dist/index.js",
  "scripts": {
    "copy-client": "cp -r src/client dist/client",
    "build": "tsc -b ./tsconfig.json && npm run copy-client",
    "dev": "npm run copy-client && tsc  -b ./tsconfig.json --watch",
    "format": "prettier --ignore-path .gitignore -w .",
    "lint": "eslint --ignore-path .gitignore ./**/*.ts",
    "prepare": "ts-patch install && typia patch",
    "prisma:gen": "prisma generate",
    "prisma:push": "prisma db push"
  },
  "licence": "MIT",
  "engine": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.1.2",
    "tsx": "^3",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.1",
    "@nestjs/core": "^10.3.1",
    "typia": "^5.3.12"
  }
}
