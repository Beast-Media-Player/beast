{
  "name": "beast-turbo",
  "private": true,
  "scripts": {
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev": "dotenv -- pnpm --recursive --parallel dev",
    "build": "dotenv -- pnpm --recursive --parallel --filter './apps/*' build",
    "prisma:gen": "dotenv -- pnpm --filter server-db-schemas prisma:gen",
    "prisma:migrate": "dotenv -- pnpm --filter server-db-schemas prisma:migrate",
    "prisma:push": "dotenv -- pnpm --filter server-db-schemas prisma:push"
  },
  "devDependencies": {
    "dotenv": "^16.3.2",
    "dotenv-cli": "^7.3.0",
    "pnpm": "^8.15.1",
    "prettier": "^3.1.1",
    "prisma": "^5.9.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@8.15.1+sha256.245fe901f8e7fa8782d7f17d32b6a83995e2ae03984cb5b62b8949bfdc27c7b5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
