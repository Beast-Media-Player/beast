{
  "name": "beast-turbo",
  "private": true,
  "scripts": {
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev": "dotenv -- pnpm --recursive --parallel --filter=!api dev ",
    "build": "dotenv -- pnpm --recursive --parallel --filter './apps/*' build",
    "swagger": "dotenv -- pnpm --parallel --filter=server --filter=api swagger && pnpm --filter 'front' swagger"
  },
  "devDependencies": {
    "dotenv": "^16.3.2",
    "dotenv-cli": "^7.3.0",
    "pnpm": "^8.15.1",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@8.15.1+sha256.245fe901f8e7fa8782d7f17d32b6a83995e2ae03984cb5b62b8949bfdc27c7b5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
